<h1>Here are all your posts</h1>

<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Post</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.post %></td>

      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>  
</table>
